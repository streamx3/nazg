#!/bin/bash

build () {
	echo "Buildding non-debug...."
	cmake ..
	make
	make install
}

build_debug () {
	echo "Buildding debug...."
	cmake -DCMAKE_BUILD_TYPE=Debug ..
	make
	make install
}

clean () {
	for a in `ls | grep -v run` ; do rm -rfv $a; done
	rm -rfv ../out
}

debug () {
	gdb --silent -x ../debug/test-list.txt
}

wrong_option () {
	echo "Wrong option!"
}

if [ -z "$1" ]
then
	echo "Error! No option given!"
	exit 1;
else
	case "$1" in
	"build" | "b" )
		build
		;;
	"build_debug" | "bd" )
		build_debug
		;;
	"clean" | "c" )
		clean
		;;
	"gdb" | "g" )
		debug
		;;
	*)
		wrong_option
		;;
	esac
fi

